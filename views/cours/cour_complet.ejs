     <!-- Courses Start -->
     <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title bg-white text-center px-3">الدورات المسجله
                </h6>
                <h1 class="mb-5" style="color: #fb873f;"> <%=user%>:دروس خاصلة بالاستاد</h1>
                <form action="/coures_complet" method="get">
                    <input type="hidden" name="user" value="<%= user %>" >
                    <input type="search" name="search" style="height: 50px; width: 40%; border-radius: 10px;" placeholder="...ابحث">
                    <button type="submit" style="display: none;">Rechercher</button>
                  </form>
                  
                  
                <br><br>
            </div>
            <div class="row g-4 py-2">
                <% cour.forEach((add) => { %>
                    <% if (add.user === user) { %>
                        <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="course-item shadow">
                                <% if (add.image) { %>
                                    <div class="position-relative overflow-hidden text-light image">
                                        <img class="img-fluid" src="data:image/jpeg;base64,<%= add.image.toString('base64') %>" alt="">
                                    </div>
                                <% } else { %>
                                    <div class="position-relative overflow-hidden text-light image">
                                        <img class="img-fluid" src="/images/img/course-1.jpg" alt="">
                                    </div>
                                <% } %>
                                <div class="p-2 pb-0">
                                    <h5 class="mb-1"><a href="/coures_complet" class="text-dark"><%= add.titre %></a></h5>
                                </div>
                                <div class="d-flex">
                                    <small class="flex-fill text-left p-2 px-2"><i class="fa fa-star text-warning me-2"></i><%= add.niveau %>: السنة</small>
                                    <small class="flex-fill text-left p-2 px-2"><i class="fa fa-star text-warning me-2"></i><%= add.user %>: الاستاد</small>
                                </div>
                                <div class="d-flex">
                                    <% 
                                    let x = ''; // Définir la variable x en dehors de la boucle
                                    prof.forEach((add) => { 
                                        if (add.user === user) { 
                                            x = add.admin; // Attribuer la valeur de add.admin à x si la condition est vraie
                                        } 
                                    }); 
                                    %>
                                    <small class="flex-fill text-left p-2 px-2"><i class="fa fa-star text-warning me-2"></i><%= x%> </small>
                                    <div class="user-profile-nav">
                                        <div class="btn-add-group">
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= add.id %>">
                                                Voir 
                                            </button>
                                            <div class="modal fade" id="exampleModal<%= add.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Détails du cours</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            
                                                            <iframe width="470" height="315" src="https://www.youtube.com/embed/TCHxpZ8FcQE?si=FmZVQyVSxBoLaQbL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    <% } %>
                <% }) %>
